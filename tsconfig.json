{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": ["dom", "es2019"],
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "preserve",
    "typeRoots": ["node_modules/@types"],
