{
  "manifest_version": 3,
  "name": "Notion Like Button",
  "description": "Embed Like Button into Notion",
  "version": "1.0.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": { "16": "icon.png" },
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
